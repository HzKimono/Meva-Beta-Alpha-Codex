# Exchange credentials (required only when LIVE_TRADING=true and explicitly armed)
BTCTURK_API_KEY=
BTCTURK_API_SECRET=
BTCTURK_BASE_URL=https://api.btcturk.com

# Global safety gates
KILL_SWITCH=true
DRY_RUN=true
LIVE_TRADING=false
LIVE_TRADING_ACK=I_UNDERSTAND
STAGE7_ENABLED=false

# Core execution settings
# stage4-run/stage7*/doctor CLI commands accept --db; when omitted they read STATE_DB_PATH.
STATE_DB_PATH=btcbot_state.db
LOG_LEVEL=INFO
SYMBOLS=["BTC_TRY", "ETH_TRY", "SOL_TRY"]
TARGET_TRY=300
OFFSET_BPS=20
TTL_SECONDS=120
MIN_ORDER_NOTIONAL_TRY=10
TRY_CASH_TARGET=300
TRY_CASH_MAX=600
ALLOCATION_FEE_BUFFER_BPS=20
FEE_BUFFER_RATIO=0.002
INVESTABLE_USAGE_MODE=use_all
INVESTABLE_USAGE_FRACTION=1
MAX_TRY_PER_CYCLE=0
DRY_RUN_TRY_BALANCE=1000
MAX_ORDERS_PER_CYCLE=2
MAX_OPEN_ORDERS_PER_SYMBOL=1
COOLDOWN_SECONDS=60
NOTIONAL_CAP_TRY_PER_CYCLE=1000
MAX_NOTIONAL_PER_ORDER_TRY=0
MIN_PROFIT_BPS=30
MAX_POSITION_TRY_PER_SYMBOL=5000
ENABLE_AUTO_KILL_SWITCH=true

# Stage7 replay/universe/risk knobs
STAGE7_UNIVERSE_SIZE=20
STAGE7_UNIVERSE_QUOTE_CCY=TRY
STAGE7_UNIVERSE_WHITELIST=[]
STAGE7_UNIVERSE_BLACKLIST=[]
STAGE7_MIN_QUOTE_VOLUME_TRY=0
STAGE7_MAX_SPREAD_BPS=1000000
STAGE7_VOL_LOOKBACK=20
STAGE7_SCORE_WEIGHTS=
STAGE7_MARK_PRICE_SOURCE=mid
STAGE7_SLIPPAGE_BPS=25
STAGE7_FEES_BPS=20
STAGE7_ORDER_OFFSET_BPS=5
STAGE7_MAX_DRAWDOWN_PCT=0.25
STAGE7_MAX_DAILY_LOSS_TRY=500
STAGE7_MAX_CONSECUTIVE_LOSSES=3
STAGE7_MAX_DATA_AGE_SEC=60
STAGE7_SPREAD_SPIKE_BPS=300
STAGE7_RISK_COOLDOWN_SEC=900

# Stage 5 strategy knobs
MEAN_REVERSION_BPS=50
STAGE5_BOOTSTRAP_NOTIONAL_TRY=50
STAGE5_MAX_INTENT_NOTIONAL_TRY=100
STAGE5_ANCHOR_PRICE=

# Dynamic 24h momentum universe knobs
DYNAMIC_UNIVERSE_ENABLED=true
UNIVERSE_TOP_N=5
UNIVERSE_SPREAD_MAX_BPS=60
UNIVERSE_MIN_DEPTH_TRY=50000
UNIVERSE_EXCLUDE_STABLES=true
UNIVERSE_EXCLUDE_SYMBOLS=["USDTTRY", "USDCTRY", "EURTRY"]
UNIVERSE_REFRESH_MINUTES=60
UNIVERSE_HISTORY_BUCKET_MINUTES=5
UNIVERSE_HISTORY_TOLERANCE_MINUTES=30
