# Pilot-live profile (no secrets). Copy into .env and set API credentials separately.
DRY_RUN=false
KILL_SWITCH=false
LIVE_TRADING=true
LIVE_TRADING_ACK=I_UNDERSTAND

# Keep a protected TRY reserve.
TRY_CASH_TARGET=300

# Universe and cadence.
DYNAMIC_UNIVERSE_ENABLED=true
UNIVERSE_TOP_N=5
SYMBOLS=["BTCTRY","ETHTRY","SOLTRY","XRPTRY","AVAXTRY"]

# Conservative risk caps.
NOTIONAL_CAP_TRY_PER_CYCLE=500
MAX_NOTIONAL_PER_ORDER_TRY=150
MIN_ORDER_NOTIONAL_TRY=20
MAX_ORDERS_PER_CYCLE=2
MAX_OPEN_ORDERS_PER_SYMBOL=1
COOLDOWN_SECONDS=90

# Keep existing live arming guards and DB path.
STATE_DB_PATH=btcbot_state.db
LOG_LEVEL=INFO
